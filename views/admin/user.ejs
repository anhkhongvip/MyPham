    <!-- @@ Profile Edit Modal @e -->
    <div class="modal fade" role="dialog" id="user-edit">
      <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
          <a href="#" class="close" data-dismiss="modal"><em class="icon ni ni-cross-sm"></em></a>
          <div class="modal-body modal-body-lg">
            <h5 class="title">Update user</h5>
            <!-- .nav-tabs -->
            <div class="tab-content">
              <div class="tab-pane active">
                <form action="/api/admin/users" method="put" id="form-update-user">
                  <div class="row gy-4">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label class="form-label" for="username-update"> Name </label>
                        <input type="text" name="username" class="form-control form-control-lg" id="username-update"
                          placeholder="Enter username" />
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group">
                        <label class="form-label" for="phone_number-update">Phone Number</label>
                        <input type="text" name="phone_number" class="form-control form-control-lg"
                          id="phone_number-update" placeholder="Enter phone number" />
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-group">
                        <label class="form-label">Role</label>
                        <div class="form-control-wrap">
                          <select class="form-control" id="role-update" name="isAdmin">
                            <option value="true">Admin</option>
                            <option value="false">User</option>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="col-12">
                      <ul class="align-center flex-wrap flex-sm-nowrap gx-4 gy-2">
                        <li>
                          <a href="javascript:void(0)" class="btn btn-lg btn-primary" data-id=""
                            id="updateUser">Update</a>
                        </li>
                        <li>
                          <a href="#" data-dismiss="modal" class="link link-light">Cancel</a>
                        </li>
                      </ul>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <!-- .tab-content -->
          </div>
          <!-- .modal-body -->
        </div>
        <!-- .modal-content -->
      </div>
      <!-- .modal-dialog -->
    </div>
    <!-- .modal -->
    <%- include("layouts/script"); -%>
      <script type="text/javascript">
        let currentPage;
        let totalPages;
        $(document).ready(function () {
          getListUser(1);

          $("#updateUser").click(function () {
            let form = $("#form-update-user")
            let id = $(this).attr("data-id")
            $.ajax({
              type: "PUT",
              url: location.protocol + "//" + location.host + `/api/admin/users/${id}`,
              data: form.serialize()
            })
              .done(function (response) {
                console.log(response);
                $(`#account-${id} .username`).text(response.user.userName);
                $(`#account-${id} .tb-role`).text(`${response.account.isAdmin ? 'Admin' : 'User'}`);
                $(`#account-${id} .tb-role`).attr("data-role", response.account.isAdmin);
                $(`#account-${id} .tb-phone`).text(response.user.phoneNumber);
                $("#user-edit").modal("hide");
                Swal.fire({
                  icon: "success",
                  title: "Update successfully!",
                  showConfirmButton: false,
                  timer: 1500,
                });
              })
              .fail(function (response) {

              })
          })
        })

        function btnEdit(id) {
          let username = $(`#account-${id} .username`).text().trim();
          let role = $(`#account-${id} .tb-role`).attr("data-role");
          let phoneNumber = $(`#account-${id} .tb-phone`).text().trim();
          console.log(username, role, phoneNumber);
          $("#username-update").val(username);
          $("#phone_number-update").val(phoneNumber);
          $(`#role-update option[value=${role}]`).attr('selected', 'selected');
          $("#updateUser").attr("data-id", id)
        }

        function getListUser(page) {
          if ($('.user-item')) {
            $('.user-item').remove();
          }
          $.ajax({
            type: 'GET',
            url: location.protocol + '//' + location.host + `/api/admin/users/${page}`,
            contentType: 'json',
            dataType: "json",
          })
            .done(function (response) {
              console.log(response);
              currentPage = response.currentPage;
              totalPages = response.totalPages;
              let data = '';
              response.accounts.forEach(value => {
                data += `<div class="nk-tb-item user-item" id="account-${value._id}">` +
                  '                                  <div class="nk-tb-col">' +
                  '                                    <div class="user-card">' +
                  '                                      <div class="user-info">' +
                  '                                        <span class="tb-lead username">' +
                  '                                         ' + value.userId.userName +
                  '                                          <span class="dot dot-success d-md-none ml-1"></span>' +
                  '                                        </span>' +
                  '                                        <span class="email">' + value.email + '</span>' +
                  '                                      </div>' +
                  '                                    </div>' +
                  '                                  </div>' +
                  '                                  <div class="nk-tb-col tb-col-mb">' +
                  `                                    <span class="tb-role" data-role="${value.isAdmin}" >${value.isAdmin ? "Admin" : "User"}</span>` +
                  '                                  </div>' +
                  '                                  <div class="nk-tb-col tb-col-md">' +
                  '                                    <span class="tb-phone">' + value.userId.phoneNumber + '</span>' +
                  '                                  </div>' +
                  '                                   <div class="nk-tb-col nk-tb-col-tools">' +
                  '                                         <ul class="nk-tb-actions gx-1 my-n1">' +
                  '                                             <li class="mr-n1">' +
                  '                                                <div class="dropdown">' +
                  '                                                    <a href="#"' +
                  '                                                         class="dropdown-toggle btn btn-icon btn-trigger"' +
                  '                                                             data-toggle="dropdown"><em' +
                  '                                                                 class="icon ni ni-more-h"></em></a>' +
                  '                                                                     <div' +
                  '                                                                       class="dropdown-menu dropdown-menu-right">' +
                  '                                                                           <ul' +
                  '                                                                               class="link-list-opt no-bdr">' +
                  '                                                                                  <li>' +
                  `                                                                                       <a href="javascript:void(0)" data-toggle="modal" data-target="#user-edit" onclick="btnEdit(\'${value._id}\')"><em` +
                  '                                                                                             class="icon ni ni-edit"></em><span>Edit' +
                  '                                                                                                User</span></a>' +
                  '                                                                                            </li>' +
                  '                                                                                        </ul>' +
                  '                                                                                    </div>' +
                  '                                                                                </div>' +
                  '                                                                            </li>' +
                  '                                                                        </ul>' +
                  '                                                                    </div>' +
                  '                                </div><!-- .nk-tb-item -->' + ''
                '';
              });
              $('.nk-tb-list.nk-tb-ulist').append(data);
              pagination(response);
            })
            .fail(function (err) {
              console.log(err);
            });

        }

        function prevPage() {
          if (currentPage > 1) {
            currentPage--;
            selectPage(currentPage)
          }
        }

        function selectPage(page) {
          $.ajax({
            type: 'GET',
            url: location.protocol + '//' + location.host + `/api/users/${page}`,
            contentType: 'json',
            dataType: "json",
          })
            .done(function (response) {
              currentPage = response.currentPage;
              getListUser(currentPage)
              pagination(response);
            })
            .fail(function (err) {
              console.log(err);
            })
        }

        function nextPage() {
          if (currentPage < totalPages) {
            currentPage++;
            selectPage(currentPage)
          }
        }

        function pagination(response) {
          let data = "";
          if (response.currentPage > 1) {
            data +=
              '<li class="page-item"><a class="page-link" href="javascript:void(0);" onclick="prevPage()">Prev</a></li>';
          }
          for (let i = 0; i < response.totalPages; i++) {
            data +=
              "" +
              '<li class="page-item"><a class="page-link" href="javascript:void(0);" onclick="selectPage(\'' + (i + 1) + "')\" >" + (i + 1) + "</a></li>" + "";
          }
          if (response.currentPage != response.totalPages && response.totalPages > 0) {
            data +=
              '<li class="page-item"><a class="page-link" href="javascript:void(0);" onclick="nextPage()">Next</a></li>';
          }
          $(".pagination").html(data);
        }

      </script>
  </body>

</html>